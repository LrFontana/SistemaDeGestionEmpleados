@using Client.Pages.OtrasPaginas
@using Microsoft.AspNetCore.Authorization
@using Syncfusion.Blazor.Popups
@inherits LayoutComponentBase
@attribute [Authorize]

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <MenuDesplegableDePerfil></MenuDesplegableDePerfil>     
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<SfDialogProvider />

@code {
    async Task CerrarSesionClick()
    {
        var cerrarSesionModelo = new SesionUsuario();
        var proveerdorPersonalizadoDelEstadoDeAutenticacion = (ProveedorDeEstadoDeAutenticacionPersonalizado)AuthStateProvider;
        await proveerdorPersonalizadoDelEstadoDeAutenticacion.ActualizarEstadoDeAutenticacion(cerrarSesionModelo);
        NavMager.NavigateTo("/", forceLoad: true);
    }
}
